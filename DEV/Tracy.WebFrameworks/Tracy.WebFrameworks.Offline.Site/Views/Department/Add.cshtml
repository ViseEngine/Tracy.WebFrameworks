<div style="padding: 15px; overflow: hidden">
    <form id="ui_department_addform" method="post" action="">
        <table class="tableForm" width="100%">
            <tr>
                <th>
                    名称：
                </th>
                <td>
                    <input type="text" name="Name" id="Name"
                           class="easyui-validatebox" data-options="required:true" autocomplete="off" />
                </td>
            </tr>
            <tr>
                <th>
                    编码：
                </th>
                <td>
                    <input type="text" name="Code" id="Code"
                           class="easyui-validatebox" data-options="required:true" autocomplete="off" />
                </td>
            </tr>
            <tr>
                <th>
                    排序：
                </th>
                <td>
                    <input name="Sort" class="easyui-numberspinner" style="width: 70px;"
                           value="10" data-options="min:1,max:100,editable:false">
                </td>
            </tr>
            <tr>
                <th>
                    父节点：
                </th>
                <td>
                    @*<input class="easyui-combotree" id="comboParent" name="comboParent"
                           data-options="url: '@Url.Action("GetOrgTreeData", "Common")'+'?orgType=2',lines:true" />*@
                    <input id="comboParent" />
                    <img style="cursor: pointer; vertical-align: middle;" onclick="$('#comboParent').combotree('clear');"
                         alt="清空父节点" title="清空父节点" src='@Url.Content("~/Content/easyui/icon/edit-clear.png")' />
                </td>
            </tr>
        </table>
    </form>
</div>
